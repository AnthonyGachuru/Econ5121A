\begin_layout Itemize

\emph on
Expectation
\emph default
 is an average of a random variable.
 Expectation is nothing but an integration, where the integrand is the random
 variable, and the measure is the probability measure.
 We write 
\begin_inset Formula $E\left[X\right]$
\end_inset

, instead of 
\begin_inset Formula $\int X\mathrm{d}P_{X}$
\end_inset

, just for a concise notation when the underlying probability measure is
 clear.
\end_layout

\begin_layout Itemize
Mean 
\begin_inset Formula $\mu=E\left[X\right]$
\end_inset

, variance 
\begin_inset Formula $\mathrm{var}\left[X\right]=E\left[\left(X-\mu\right)^{2}\right]$
\end_inset

, skewness 
\begin_inset Formula $E\left[\left(X-\mu\right)^{3}\right]$
\end_inset

 and kurtosis 
\begin_inset Formula $E\left[\left(X-\mu\right)^{4}\right]$
\end_inset

.
\end_layout

\begin_layout Itemize
Skewness coefficient 
\begin_inset Formula $E\left[\left(X-\mu\right)^{3}\right]/\sigma^{3}$
\end_inset

, degree of excess 
\begin_inset Formula $E\left[\left(X-\mu\right)^{4}\right]/\sigma^{4}-3$
\end_inset

.
\end_layout

\begin_layout Itemize
Jensen's inequality.
 If 
\begin_inset Formula $\varphi\left(\cdot\right)$
\end_inset

 is a convex function, then 
\begin_inset Formula $\varphi\left(E\left[x\right]\right)\leq E\left[\varphi\left(x\right)\right].$
\end_inset


\end_layout

\begin_layout Itemize
Chebyshev inequality: 
\begin_inset Formula 
\[
P\left[\left|X\right|>\epsilon\right]\leq E\left[X^{2}\right]/\epsilon^{2}.
\]

\end_inset

Proof: 
\begin_inset Formula 
\begin{align*}
E\left[X^{2}\right] & =\int X^{2}dF\left(X\right)=\int_{\left|X\right|>\epsilon}X^{2}dF\left(X\right)+\int_{\left|X\right|\leq\epsilon^{2}}X^{2}dF\left(X\right)\\
 & \geq\int_{\left|X\right|>\epsilon}X^{2}dF\left(X\right)\geq\epsilon^{2}\int_{\left|X\right|>\epsilon}dF\left(X\right)=\epsilon^{2}P\left[\left|X\right|>\epsilon\right].
\end{align*}

\end_inset


\end_layout

